---
import dayjs from 'dayjs';
import advancedformat from 'dayjs/plugin/advancedFormat';

dayjs.extend(advancedformat);

interface Props {
  date: string;
  title: string[];
}

const { date, title } = Astro.props;
const formattedDate = dayjs(date).format('Do of MMMM');
---

<header class="mb-10">
  <p class="mx-5 mb-1"><strong>Date:</strong> {formattedDate}</p>
  <h1 class="flex flex-col rounded-lg bg-neutral-1 p-5">
    <span class="text-2xl text-xl">{title[0]}</span>
    <span class="my-2 text-lg text-xl font-bold">{title[1]}</span>
    <span class="text-2xl text-3xl font-bold">{title[2]}</span>
  </h1>
  <p class="p-5 text-center md:text-right">
    <span class="mb-3 inline-block md:mr-5">Register for upcoming retreat</span>
    <a href="#" class="register inactive">Registration</a>
  </p>
</header>

<style>
  .register {
    @apply inline-block rounded-lg px-15 py-3 text-xl font-bold bg-blue hover:bg-neutral-9 c-white transition-all w-full md:w-auto;
  }

  .register.inactive {
    @apply bg-neutral-4 cursor-not-allowed;
  }
</style>
